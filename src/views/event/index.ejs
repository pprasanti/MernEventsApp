<% layout('layout/template') %>
  <h2>Events</h2>
  <section>
    <a href="/events/new">Add Event</a>
  </section>
  <br />
  <section>
    <% for(let event of events ) { %>
      <div class="card" mb-3>
        <div class="row">
          <div class="col-md-4" mb-3>
            <img class="img-fluid" src="<%= event.img %>" alt="" />
          </div>
          <div class="col-md-8" mb-3>
            <div class="card-body">
              <h5 class="card-title">
                <a href="/events/<%= event._id %>">
                  <%= event.name %>
                </a>
              </h5>
              <p class="card-text">
                <%= event.description %>
              </p>
              <p class="card-text">
                <%= event.website %>
              </p>
              <p class="card-text">
                <%= event.phone %>
              </p>
              <p class="card-text">
                <%= event.priceStarts %>
              </p>
              <section>
                <a href="/events/<%= event._id %>/edit">Edit</a>
                <a href="/events/<%= event._id %>/comments/new">Add Comment</a>
                <a href="/events/<%= event._id %>/comments">View Comments</a>
                <form action="/events/<%= event._id %>?_method=DELETE" method="post">
                  <button>Delete</button>
                </form>
              </section>
            </div>
          </div>
        </div>
      </div>
      <% } %>
  </section>