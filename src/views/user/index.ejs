<% layout('layout/template') %>
  <h2>Users</h2>
  <section>
    <a href="/users/new">Add User</a>
  </section>
  <br />

  <section>
    <table style="border: 0.5px solid black">
      <thead>
        <th>
          <tr>
            <td>Name</td>
            <td>Address</td>
            <td>Email</td>
            <td>Phone</td>
            <td>Image</td>
            <td colspan="2">Action</td>
          </tr>
        </th>
      </thead>
      <tbody>
        <% for(let user of users ) { %>
          <tr>
            <td><a href="/users/<%= user._id %>">
                <%= user.fullName %>
              </a></td>
            <td>
              <%= user.address %>
            </td>
            <td>
              <%= user.email %>
            </td>
            <td>
              <%= user.phone %>
            </td>
            <td>
              <%= user.img %>
            </td>
            <td>
              <a href="/users/<%= user._id %>/edit">Edit</a>
            </td>
            <td>
              <form action="/users/<%= user._id %>?_method=DELETE" method="post">
                <button>Delete</button>
              </form>
            </td>
          </tr>
          <% } %>
      </tbody>
    </table>
  </section>