<% layout('layout/template') %>

    <h2>Add Comment</h2>
    <h4>Event Name - <%= name %>
    </h4>
    <section>
        <form action="/events/comments/<%= eid %>" method="post">
            <section>
                <label for="text">Comment : </label>
                <br>
                <textarea id="text" name="text" cols="32" rows="4" placeholder="Comment"></textarea>
            </section>
            <section>
                <label for="rating">Rating : </label>
                <input type="text" id="rating" name="rating" placeholder="Rating"></input>
            </section>
            <br>
            <button class="btn btn-success">Submit</button>
            <a class="btn btn-dark" href="/events/<%= eid %>">Back</a>
        </form>
    </section>